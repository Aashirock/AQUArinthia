<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical" >

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	    
	    <LinearLayout
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:paddingRight="5dp"
		    android:gravity="bottom"
		    android:orientation="vertical">
	
	       <TextView
	           	android:id="@+id/tvHeight"
	           	android:layout_width="match_parent"
	           	android:layout_weight="1"
	           	android:layout_height="0sp"
	           	android:gravity="center_vertical|center_horizontal"
	           	android:text="40mm"
	           	android:textSize="18sp"
	           	android:fontFamily="sans"
	           	android:textColor="@color/blue"
	           	android:textAppearance="?android:attr/textAppearanceSmall" />
	       
	       <TextView
	           	android:id="@+id/tvTemp"
	           	android:layout_width="match_parent"
	           	android:layout_weight="1"
	           	android:layout_height="0sp"
	           	android:gravity="center_vertical|center_horizontal"
	           	android:text="11Â°C"
	           	android:textSize="18sp"
	           	android:fontFamily="sans"
	           	android:textColor="@color/orange"
	           	android:textAppearance="?android:attr/textAppearanceSmall" />
		    
	    </LinearLayout>
	    
	    <View android:layout_width="1sp"
	        android:layout_height="match_parent"
	        android:background="@color/lightgray" />
	    
	    <LinearLayout
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="4"
		    android:paddingLeft="10dp"
		    android:gravity="bottom"
		    android:orientation="vertical">
			    
	        <TextView
	      		android:id="@+id/tvLake"
	      		android:layout_width="match_parent"
	      		android:layout_height="wrap_content"
	      		android:text="Large Text"
	      		android:textSize="18sp"
	      		android:textStyle="bold"
	      		android:fontFamily="sans"
	      		android:gravity="center_vertical|left"
	      		android:textColor="@color/gray"
	      		android:textAppearance="?android:attr/textAppearanceLarge" />
	        
	        <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="0sp"
			    android:layout_weight="1"
			    android:gravity="center_vertical|left"
			    android:orientation="horizontal">
			    
				<TextView
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:gravity="center_vertical|left"
		            android:text="@string/label_last_update"
		            android:textSize="12sp"
		            android:fontFamily="sans"
		            android:textStyle="italic"
		            android:textColor="@color/gray"
		            android:textAppearance="?android:attr/textAppearanceSmall" />
				
				<TextView
					android:id="@+id/tvTime"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:gravity="center_vertical|left"
		            android:text="1.11.2013 14:30Uhr"
		            android:textSize="12sp"
		            android:fontFamily="sans"
		            android:textStyle="bold"
		            android:textColor="@color/green"
		            android:textAppearance="?android:attr/textAppearanceSmall" />
			
			</LinearLayout>
		    
	    </LinearLayout>
	
	</LinearLayout>
	
	<Button android:id="@+id/btnCloseDetail"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_marginTop="5sp"
        android:textSize="14sp"
		android:fontFamily="sans"
		android:textStyle="bold"
		android:textColor="@color/gray"
		android:background="@color/lightgray"
        android:text="@string/label_close_graph"
        android:scaleType="centerCrop" />
	
	<WebView
        android:id="@+id/wvDiagramm"
        android:layout_width="match_parent"
        android:layout_height="280sp"
        android:layout_weight="1" />

</LinearLayout>
